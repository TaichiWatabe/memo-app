<h3>新規作成</h3>
<%= form_tag("/create") do %>
    <div class="form-group">
        <%= label_tag "form-title", "タイトル" %>
        <%= text_field :memos, :title, id:"form-title", class:"form-control", placeholder: "タイトルをいれてね！" %>
    </div>
    <div class="form-group">
        <%= label_tag "form-content", "本文" %>
        <%= text_field :memos, :body, id:"form-content", class:"form-control", placeholder: "本文をいれてね！" %>
    </div>
    <div class="form-group">
        <%= label_tag "form-category", "カテゴリー" %>
        <%= select_tag 'memos[category_id]', options_from_collection_for_select(@categories, :id, :name), id:"form-category", class:"form-control" %>
    </div>
    <%= submit_tag "送信" ,class:"btn btn-primary"%>
<% end %>
